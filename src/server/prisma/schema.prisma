datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native","darwin","debian-openssl-1.1.x"]
}

model User {
  id      String    @id
  email   String    @unique
  content Content[]
}

model Content {
  id           Int    @default(autoincrement()) @id
  user         User   @relation(fields: [userEmail], references: [email])
  userEmail    String 
  contentTitle String
  contentText  String
}