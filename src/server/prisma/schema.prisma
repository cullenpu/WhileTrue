datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
  previewFeatures = ["fullTextSearch"]
}

model User {
  id             String          @id
  email          String          @unique
  content        Content[]
  offers         Offer[]
  clientsegments ClientSegment[]
}

model Content {
  id           Int     @id @default(autoincrement())
  user         User?   @relation(fields: [userId], references: [id])
  userId       String?
  contentTitle String?
  contentBody  String
}

model Offer {
  id     Int     @id @default(autoincrement())
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
  type   String
  offer  String
}

model ClientSegment {
  id      Int     @id @default(autoincrement())
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
  segment String
}
