{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
          "~/*": [ "./*" ]
        },
        "types": [ "node", "jest" ],
        "typeRoots": [ "./node_modules/@types", "./types" ]
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "files": true
    }
  }